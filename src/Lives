class Lives {
  x: number;
  y: number;
  color: string;
  lives: number;
  font: string;

  constructor(x: number, y: number, color: string, font: string) {
    this.x = x;
    this.y = y;
    this.color = color;
    this.lives = 3;
    this.font = font;
  }

  render(ctx: CanvasRenderingContext2D) {
    ctx.font = this.font;
    ctx.fillStyle = this.color;
    ctx.fillText(`Lives: ${this.lives}`, this.x, this.y);
  }

  loseLife() {
    this.lives--;
  }

  reset() {
    this.lives = 3;
  }
}
export default Lives;